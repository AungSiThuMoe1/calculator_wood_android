<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="380dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ပြန်လည်ပြင်ဆင်ခြင်း"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:layout_gravity="left"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ပေရှည်"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="လုံးပတ်"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="အရေအတွက်"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/showlength"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ေပရွည္"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/showperimeter"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="လုုံးပတ္"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/showquantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="အေရအတြက္"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        >
        <EditText
            android:id="@+id/edlength"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="ေပ"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/edperimeter"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="လက္မ"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/edquantity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:inputType="number"
            />
    </LinearLayout>
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="ဖျက်မည်"
            />
        <LinearLayout
            android:layout_alignLeft="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            >
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="မလုပ်ဆောင်ပါ"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="40dp"/>
            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အိုကေ"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>